@model ContactoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Eliminar Contacto</h5>
    <div class="card-body">
        <!-------------------formulario-->
        <form asp-action="Eliminar" asp-controller="Mantenedor" method="post">
            <input asp-for="IdContacto" type="hidden" />
            <div class="alert alert-danger" role="alert">
                Seguro que desea eliminar el contacto: @Model.Nombre ?
            </div>
            <button type="submit" class="btn btn-primary">Eliminar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la lista</a>
        </form>
        <!--fin formulario-->

    </div>
</div>

